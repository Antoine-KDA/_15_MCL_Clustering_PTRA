#!/bin/bash
#==============================================================================
# stop_experiment - Safely stop running experiment
# Author: Antoine KDA
#==============================================================================

EXPERIMENT_DIR="$HOME/projects/experiments"
PID_FILE="$EXPERIMENT_DIR/experiment.pid"

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo "=========================================="
echo "  Stop Experiment"
echo "=========================================="

# Check if PID file exists
if [ ! -f "$PID_FILE" ]; then
    echo -e "${YELLOW}No experiment PID file found${NC}"
    exit 0
fi

PID=$(cat "$PID_FILE")

# Check if process is running
if ! ps -p $PID > /dev/null 2>&1; then
    echo -e "${YELLOW}Process (PID: $PID) is not running${NC}"
    echo "Cleaning up PID file..."
    rm -f "$PID_FILE"
    exit 0
fi

# Show process info
echo "Found running experiment:"
ps -p $PID -o pid,ppid,%cpu,%mem,etime,cmd

echo ""
echo -e "${YELLOW}WARNING: This will stop the experiment!${NC}"
read -p "Are you sure you want to stop? (yes/no): " confirm

if [ "$confirm" != "yes" ]; then
    echo "Cancelled"
    exit 0
fi

echo ""
echo "Stopping experiment (PID: $PID)..."

# Try graceful shutdown first
kill $PID
echo "Sent termination signal (SIGTERM)"
echo "Waiting for process to stop..."

# Wait up to 30 seconds for graceful shutdown
for i in {1..30}; do
    if ! ps -p $PID > /dev/null 2>&1; then
        echo -e "${GREEN}✓ Process stopped gracefully${NC}"
        rm -f "$PID_FILE"
        exit 0
    fi
    sleep 1
    echo -n "."
done

echo ""
echo -e "${YELLOW}Process did not stop gracefully${NC}"
read -p "Force kill? (yes/no): " force

if [ "$force" = "yes" ]; then
    kill -9 $PID
    sleep 1
    if ! ps -p $PID > /dev/null 2>&1; then
        echo -e "${GREEN}✓ Process force killed${NC}"
        rm -f "$PID_FILE"
    else
        echo -e "${RED}✗ Failed to kill process${NC}"
        exit 1
    fi
else
    echo "Process still running"
    exit 1
fi
